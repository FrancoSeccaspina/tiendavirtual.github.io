<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
    <link rel="stylesheet" href="/css/login.css" />
</head>
<body>
    <%- include('./partials/header.ejs') %>

    <main class="mainLogin">

        <div id="left-login">
            <h2>Iniciar Sesion</h2>
            
            <form action="/login/access" method="POST">
                <label class="none" for="usuario"></label>
                <input class="inputs-login" type="text" name="email" placeholder="Correo Electronico" id="usuario" required value="<%= oldDataLogin && oldDataLogin.email ? oldDataLogin.email : '' %>"/>
                
                <% if(locals && locals.errors && errors.email) { %>
                    <p class="feedback"><%= errors.email.msg %></p>
                <% } %>
                
                <label class="none" for="password"></label>
                <input class="inputs-login" type="password" name="password" placeholder="Contrase単a" id="password" value="<%= oldDataLogin && oldDataLogin.password ? oldDataLogin.password : '' %>" />
                
                <% if(locals && locals.errors && errors.password) { %>
                    <p class="feedback"><%= errors.password.msg %></p>
                <% } %>

                <div id="remember-me">
                    <input type="checkbox" name="recordame" id="recordame" class="radio-options" value="recordame">
                    <p>Recordame</p>
                </div>
                <ul class="errorOculto" id="erroresLogin"></ul>
                <button id="iniciar-sesion" type="submit">Ingresar</button>
            </form>

            <div id="olvide-contrase単a">
                <a href="paginaEnConstruccion">多Has olvidado la contrase単a?</a>
            </div>

            <div id="registrate">
                <a href="/register"><i class="fa-regular fa-circle-user"></i>Registrate</a>
            </div>
        </div>

        <picture id="right-login"><img src="../images/supermercado_coto.png" alt="" id="image-login"></picture>

    </main>

    <footer id="login-footer">
        <%- include('./partials/footer.ejs') %>
    </footer>

    <script src="https://unpkg.com/validator@latest/validator.min.js"></script>
    <script src="../js/login.js"></script>
    
</body>
</html>